{
  "name": "@activeledger/sdk",
  "version": "1.3.0",
  "description": "NodeJS package for use when integrating with Activeledger",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config=jestconfig.json --detectOpenHandles",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "pretty": "npm run lint && npm run format",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push public && git push public --tags",
    "docs": "typedoc --out ./docs --readme ./README.md"
  },
  "homepage": "https://activeledger.io",
  "keywords": [
    "activeledger",
    "nodejs",
    "sdk",
    "blockchain",
    "dlt",
    "distributed ledger technology",
    "ledger",
    "smart contracts",
    "activeledger",
    "network",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activeledger/SDK-NodeJS.git"
  },
  "bugs": {
    "url": "https://github.com/activeledger/SDK-NodeJS/issues"
  },
  "author": "Activeledger",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "jest": "^24.8.0",
    "jext": "^0.4.3",
    "jsdoc": "^3.6.2",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5",
    "@types/eventsource": "^1.1.2",
    "@activeledger/activedefinitions": "^2.0.0-rc.8.0.64"
  },
  "dependencies": {
    "@activeledger/activecrypto": "^2.0.0-rc.8.0.64",
    "axios": "^0.19.0",
    "browser-or-node": "^1.2.1",
    "eventsource": "^1.0.7",
    "node-rsa": "1.0.5"
  }
}
